@page 
@model Amphora.Identity.Pages.Account.Manage.IndexModel

@{
    ViewData["Title"] = "Manage Profile";
}

<div class="container">
    <div class="row">
        <div class="col-md-4">
            Email Confirmed: @(Model.AppUser?.EmailConfirmed ?? false)
        </div>
        <div class="col-8">
            <a asp-page="./ChangePassword" class="btn btn-primary btn-block w-50">Change Password</a>
            <a asp-page="./ResendConfirmationEmail" class="btn btn-primary btn-block w-50">Resend Confirmation Email</a>
        </div>
    </div>
</div>