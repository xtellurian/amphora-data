@model Amphora.Api.Pages.Shared.Components.DataRequestRowViewComponent

<tr class="row align-items-center entity-item">
    <th class="col-1">
        <a asp-area="" asp-page="/DataRequests/Detail" asp-route-id="@Model.DataRequest.Id">    
            <i class="far fa-question-circle fa-lg"></i>
        </a>
    </th>
    <td class="col-1 text-left">
        @if(Model.DataRequest.IsDeleted ?? false)
        {
            <i class="text-danger fas fa-lg fa-trash" data-toggle="tooltip" data-placement="top" title="Pending Deletion"></i>
        }
    </td>
    <td class="col-sm-6">
        @Model.DataRequest.Name 
    </td>
    <td class="d-none d-sm-block col-sm-1 text-right">
        Votes: @Model.DataRequest.UserIdVotes?.Count 
    </td>
    <td class="col-1">
        <a asp-page="/DataRequests/Detail" asp-area="" asp-route-id="@Model.DataRequest.Id"> 
            <button class="btn btn-link text-success"><i class="fas fa-info-circle"></i></button> 
        </a>
    </td>
</tr>
