@model Amphora.Api.Pages.Shared.Components.InvoiceRowViewComponent

<div class="container">
    <div class="row">
        <div class="col-8">
            <i class="fas fa-file-invoice-dollar"></i>
            @Model.Invoice.Name
        </div>
        <div class="col-2">
            @if(Model.Invoice.IsPreview ?? false)
            {
                <small>Preview</small>
            }
        </div>
        @{var textColour = ""; }
        @if(Model.Invoice.InvoiceBalance > 0)
        {
            textColour = "text-success";
        }
        else if(Model.Invoice.InvoiceBalance < 0)
        {
            textColour = "text-danger";
        }
        <div class="col-2 @textColour">
            @Model.Invoice.InvoiceBalance
        </div>
    </div>
</div>