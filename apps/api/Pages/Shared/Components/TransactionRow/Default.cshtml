@model Amphora.Api.Pages.Shared.Components.TransactionRowViewComponent

<div class="container">
    <div class="row">
        <div class="col-8 text-truncate">
            @Model.Transaction.Label
        </div>
        @{var textColour = "text-danger"; }
        @if(Model.Transaction.IsCredit)
        {
            textColour = "text-success";
        }
        <div class="col-2 @textColour">
            @Model.Transaction.Amount
        </div>
        <div class="col-2">
            @if(@Model.Transaction.AmphoraId != null)
            {
                <!-- Links to an Amphora -->
                <a asp-area="Amphorae" asp-page="/Detail" asp-route-id="@Model.Transaction.AmphoraId">
                    <i class="fas fa-link"></i>
                </a>
            }
        </div>
    </div>  
</div>