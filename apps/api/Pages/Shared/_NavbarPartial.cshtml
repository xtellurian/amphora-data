@using Microsoft.AspNetCore.Identity
@using Amphora.Api.Contracts
@inject ISignInManager SignInManager
@inject IUserManager UserManager
@{
    var appUser = await UserManager.GetUserAsync(User);
}
<ul class="navbar-nav flex-grow-1 justify-content-end">
@if (SignInManager.IsSignedIn(User))
{
    @if(appUser?.GlobalAdmin() ?? false)
    {
        <li class="nav-item">
            <a class="nav-link text-light" asp-area="Admin" asp-page="/Index">Admin</a>
        </li>
    }
    <li class="nav-item">
        <a class="btn btn-info ml-1 mr-1" asp-area="" asp-page="/Home/Invite">Invite</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-light" asp-area="" asp-page="/Index">Home</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-light" asp-area="Amphorae" asp-page="/Index">Amphorae</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-light" asp-area="" asp-page="/Market/Index">Market</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-light" asp-area="" target="_blank" asp-page="/Redirection/Chat"><i class="far fa-comments fa-lg"></i></a>
    </li>
    var from = Context.Request.Host + Context.Request.Path;
    
    <li class="nav-item">
        <a class="nav-link text-light" asp-area="" target="_blank" asp-page="/Redirection/Feedback" asp-route-from="@from"><i class="far fa-frown fa-lg"></i></a>
    </li>

    <li class="nav-item dropdown avatar">
        <a href="#" class="nav-link text-light dropdown-toggle p-0" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
            @{var profileUri = appUser?.GetProfilePictureUri()?.ToString(); }
            <img src="@profileUri" class="rounded-circle z-depth-0 mb-1" alt="avatar image"/>
        </a>
        <div class="dropdown-menu">
            <a class="dropdown-item nav-link text-light" asp-area="Profiles" asp-page="/Account/Detail">My Profile</a>   
            <a class="dropdown-item nav-link text-light" asp-area="Organisations" asp-page="/Detail">My Organisation</a>
            <form class="form-inline" asp-area="Profiles" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link text-Light">Logout</button>
            </form>             
        </div>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-light" asp-area="Profiles" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-light" asp-area="Profiles" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>