@page
@using Newtonsoft.Json
@model Amphora.Api.Pages.Organisations.CreateModel

@{
    ViewData["Title"] = "Create Organisation";
}


<hr />
<div class="container">
    <div class="row">
        <div class="col-md-4">
            <h3>Create a new Organisation</h3>
            <form method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Name" class="control-label"></label>
                    <input asp-for="Input.Name" class="form-control" />
                    <span asp-validation-for="Input.Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input class="form-control-file" type="file" name="files" accept="image/jpeg">
                    <small class="form-text card-text text-muted">Profile Picture.</small>
                </div>
                <div class="form-group">
                    <label asp-for="Input.About" class="control-label"></label>
                    <input asp-for="Input.About" class="form-control" />
                    <span asp-validation-for="Input.About" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Website" class="control-label"></label>
                    <input asp-for="Input.Website" class="form-control" />
                    <span asp-validation-for="Input.Website" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div>Address</div>
                    <div class="body ui-widget">
                        <input id="autoComplete" asp-for="Input.Address" class="form-control" type="text" tabindex="1">
                    </div>
                    <div class="selection"></div>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
        <div class="col-md-4 d-flex justify-content-center">
            <h3>OR</h3>
        </div>

        <div class="col-md-4 justify-content-center">
            <h3>Join an existing Organisation</h3>
            <div class="form-group">
                <div class="ui-widget">
                    <input id="autoComplete" class="form-control autoCompleteWorkaround" type="text" tabindex="2">
                </div>
                <a id="joinButton"> <button type="button" class="btn btn-primary">Join</button></a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/@@tarekraafat/autocomplete.js@@6.1.0/dist/js/autoComplete.js"></script>
    <script src="~/js/geo.js"></script>
    <script src="~/js/autoComplete.js"></script>
    <script>
        const token = '@Model.Token';
        const url = '@Url.Action("LookupLocationAsync", "Market")';
        autocompleteGeoSearch(token, url)
    </script>
    <script>
        var content = @Html.Raw(@Newtonsoft.Json.JsonConvert.SerializeObject(Model.Organisations));
        onSelect = (feedback) => {
            console.log('hello')
            console.log(feedback)
            document.querySelector(".autoCompleteWorkaround").value = feedback.selection.value.Name
            document.querySelector("#joinButton").setAttribute("href", `/organisations/AcceptInvitation/?organisationId=${feedback.selection.value.OrganisationId}`)
        }
        staticAutocomplete(".autoCompleteWorkaround", content, "Name", onSelect)
    </script>
}