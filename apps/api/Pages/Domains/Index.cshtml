@page
@model Amphora.Api.Pages.Domains.IndexModel
@{
    ViewData["Title"] = "Amphorae";
}

<div id="main" class="container">
    <div class="row">
        <div class="col">
            <span>
                <h1 class="display-4">Domains</h1>
            </span>
        </div>
    </div>
    <div class="row">
        <div class="col-4">
            <div class="card mb-3">
                <div class="card-header">
                    <h5 class="card-title">Information</h5>
                </div>
                <div class="card-body">
                    <p> 
                        <em>Amphora Domains</em> help categorise data. If you're just getting started, use the 
                        <a asp-page="./Detail" asp-route-id="Dev">Development Domain</a> as a sandbox.
                    </p>
                    <p>
                        The <a asp-page="./Detail" asp-route-id="Agriculture">Agriculture Domain</a> defines what kinds of data are produced and consumed on farms and related industries.
                    </p>
                </div>
            </div>
        </div>
        <div class="col">
            <ul class="list-group">
            @foreach (var domain in Model.Domains)
            {
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    @domain.Name
                    <a asp-page="./Detail" asp-route-id="@domain.Id"><button class="btn btn-secondary">Detail</button></a>
                </li>
            }
            </ul>
        </div>
    </div>
</div>

