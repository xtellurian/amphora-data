@page
@model Amphora.Api.Pages.Domains.IndexModel
@{
    ViewData["Title"] = "Amphorae";
}

<div id="main" class="container">
    <div class="row main-header">
        <div class="col">
            <span>
                <h1 class="display-4">Amphor√¶</h1>
                <a asp-page="/amphorae/create"><button class="btn btn-primary">Create</button></a>
            </span>
        </div>
    </div>
    <div class="row">
        <div class="col-4">
            <div class="card mb-3">
                <div class="card-header">
                    <h5 class="card-title">Side Pane</h5>
                </div>
                <div class="card-body">
                    Put something here                                                 
                </div>
            </div>
        </div>
        <div class="col">
            <ul class="list-group">
            @foreach (var domain in Model.Domains)
            {
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    @domain.Name
                    <a asp-page="./Detail" asp-route-id="@domain.Id"><button class="btn btn-secondary">Detail</button></a>
                </li>
            }
            </ul>
        </div>
    </div>
</div>

