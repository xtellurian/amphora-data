@page
@model Amphora.Api.Pages.Temporae.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Tempora</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Tempora.Id" />
            <div class="form-group">
                <label asp-for="Tempora.Title" class="control-label"></label>
                <input asp-for="Tempora.Title" class="form-control" />
                <span asp-validation-for="Tempora.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tempora.Description" class="control-label"></label>
                <input asp-for="Tempora.Description" class="form-control" />
                <span asp-validation-for="Tempora.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tempora.Price" class="control-label"></label>
                <input asp-for="Tempora.Price" class="form-control" />
                <span asp-validation-for="Tempora.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tempora.DomainId" class="control-label"></label>
                <select asp-for="Tempora.DomainId" asp-items="@(new SelectList(Model.Domains,"Id","Name"))"></select>
                <span asp-validation-for="Tempora.DomainId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
