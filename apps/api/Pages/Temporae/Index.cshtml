@page
@model Amphora.Api.Pages.Temporae.IndexModel
@{
    ViewData["Title"] = "Temporae";
}

<div id="main" class="text-center">
    <div class="main-header">
        <span>
            <h1 class="display-4">Tempor√¶</h1>
            <a asp-page="/Temporae/Create"><button class="btn btn-primary">Create</button></a>
        </span>
    </div>
    
    <div>
        <ul class="list-group">
        @foreach (var tempora in Model.Temporae)
        {
            <li class="list-group-item d-flex justify-content-between align-items-center">
                $@tempora.Price
                <b> @tempora.Title </b>
                @tempora.Description
                <span class="badge badge-primary badge-pill">14</span>
                <a asp-page="/Temporae/Detail" asp-route-id="@tempora.Id"><button class="btn btn-secondary">Detail</button></a>
            </li>
        }
        </ul>
    </div>
</div>

