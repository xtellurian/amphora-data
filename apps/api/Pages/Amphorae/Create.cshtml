@page
@model Amphora.Api.Pages.Amphorae.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Amphora</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Amphora.Id" />
            <div class="form-group">
                <label asp-for="Amphora.Title" class="control-label"></label>
                <input asp-for="Amphora.Title" class="form-control" />
                <span asp-validation-for="Amphora.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Amphora.Description" class="control-label"></label>
                <input asp-for="Amphora.Description" class="form-control" />
                <span asp-validation-for="Amphora.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Amphora.ContentType" class="control-label"></label>
                <input asp-for="Amphora.ContentType" class="form-control" />
                <span asp-validation-for="Amphora.ContentType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Amphora.Price" class="control-label"></label>
                <input asp-for="Amphora.Price" class="form-control" />
                <span asp-validation-for="Amphora.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
