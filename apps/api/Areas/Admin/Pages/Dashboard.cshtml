@page
@model Amphora.Api.Areas.Admin.Pages.DashboardPageModel

@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container">
    <div class=row>
        <div class="col m-3">
            <div class="alert alert-secondary" role="alert">
                Values are cached per hour.
            </div>
        </div>
    </div>
    <div class="row m-1">
        <div class="col-sm-3">
            <div class="card bg-light" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title">Amphorae</h5>
                </div>
            </div>
        </div>
        <div class="col-3">
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title">Total</h5>
                    <h6 class="card-subtitle mb-2 text-muted">Count</h6>
                    <p class="card-text">@Model.Stats.Amphorae.TotalCount</p>
                </div>
            </div>
        </div>
        <div class="col-3">
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title">Active</h5>
                    <h6 class="card-subtitle mb-2 text-muted">Count</h6>
                    <p class="card-text">@Model.Stats.Amphorae.ActiveCount</p>
                </div>
            </div>
        </div>
        <div class="col-3">
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title">Mean Price of Active</h5>
                    <h6 class="card-subtitle mb-2 text-muted">Dollars</h6>
                    <p class="card-text">@Model.Stats.Amphorae.MeanActivePrice</p>
                </div>
            </div>
        </div>
    </div>
    <div class="row m-1">
        <div class="col-sm-3">
            <div class="card bg-light" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title">Organisations</h5>
                </div>
            </div>
        </div>
        <div class="col-3">
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title">Total</h5>
                    <h6 class="card-subtitle mb-2 text-muted">Count</h6>
                    <p class="card-text">@Model.Stats.Organisations.TotalCount</p>
                </div>
            </div>
        </div>
        <div class="col-3">
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title">Active</h5>
                    <h6 class="card-subtitle mb-2 text-muted">Count</h6>
                    <p class="card-text">@Model.Stats.Organisations.ActiveCount</p>
                </div>
            </div>
        </div>
    </div>
    <div class="row m-1">
        <div class="col-sm-3">
            <div class="card bg-light" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title">Users</h5>
                </div>
            </div>
        </div>
        <div class="col-3">                                     
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title">Total</h5>
                    <h6 class="card-subtitle mb-2 text-muted">Count</h6>
                    <p class="card-text">@Model.Stats.Users.TotalCount</p>
                </div>
            </div>
        </div>
        <div class="col-3">                                     
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title">Active</h5>
                    <h6 class="card-subtitle mb-2 text-muted">Count</h6>
                    <p class="card-text">@Model.Stats.Users.ActiveCount</p>
                </div>
            </div>
        </div>
    </div>
    <div class="row m-1">
        <div class="col-sm-3">
            <div class="card bg-light" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title">Debits</h5>
                </div>
            </div>
        </div>
        <div class="col-3">                                     
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title">Total</h5>
                    <h6 class="card-subtitle mb-2 text-muted">Count</h6>
                    <p class="card-text">@Model.Stats.Debits.TotalCount</p>
                </div>
            </div>
        </div>
        <div class="col-3">                                     
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title">Active</h5>
                    <h6 class="card-subtitle mb-2 text-muted">Count</h6>
                    <p class="card-text">@Model.Stats.Debits.ActiveCount</p>
                </div>
            </div>
        </div>
        <div class="col-3">
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title">Mean Price of Active</h5>
                    <h6 class="card-subtitle mb-2 text-muted">Dollars</h6>
                    <p class="card-text">@Model.Stats.Debits.MeanActivePrice</p>
                </div>
            </div>
        </div>
    </div>
    <div class="row justify-content-end m-3">
        <div class="col-2">
            <small>Generated at @Model.Stats?.GeneratedTime?.ToString("t")</small>
        </div>
    </div>
</div>