@page
@model Amphora.Api.Areas.Admin.Pages.Accounts.Detail.ConfigurationPageModel

@{
    ViewData["Title"] = "Account Configuration";
}

<div class="container">
    <div class="row">
        <div class="col">
            <a class="float-right btn btn-primary" asp-page="../Index">Admin Home</a>
            <h3>Configuration</h3>
            <p> For (@Model.Org?.Name).</p>
            <hr/>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-3 master">
            <partial name="_AdminAccountDetailMasterNavPartial" />
        </div>

        <div class="col-md-9 detail">
            <form method="post" asp-route-id="@Model.Org?.Id">
                <div class="form-group">
                    <label asp-for="Configuration.MaximumSignals" class="control-label"></label>
                    <input asp-for="Configuration.MaximumSignals" class="form-control" />
                    <span asp-validation-for="Configuration.MaximumSignals" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>