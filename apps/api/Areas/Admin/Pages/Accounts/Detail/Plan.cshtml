@page
@model Amphora.Api.Areas.Admin.Pages.Accounts.Detail.PlanPageModel

@{
    ViewData["Title"] = "Plan";
}

<div class="container">
    <div class="row">
        <div class="col">
            <h3>Plan</h3>
            <p> For (@Model.Org?.Name).</p>
            <hr/>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-3 master">
            <partial name="_AdminAccountDetailMasterNavPartial" />
        </div>
        <div class="col-md-9 detail">
            This organisation is currently on the @(Model.Org.Account?.Plan?.PlanType?.ToString() ?? "Free" ) plan.
        </div>
    </div>
</div>