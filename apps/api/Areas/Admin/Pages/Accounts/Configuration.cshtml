@page
@model Amphora.Api.Areas.Admin.Pages.Accounts.ConfigurationPageModel

@{
    ViewData["Title"] = "Account Configuration";
}

<div class="container">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row">
        <div class="col">
            <h2>Organisation: @Model.Organisation.Name </h2>
            <h4>Configuration</h4>
            <hr/>
            <form method="post" asp-route-id="@Model.Organisation?.Id">
                <div class="form-group">
                    <label asp-for="Configuration.MaximumSignals" class="control-label"></label>
                    <input asp-for="Configuration.MaximumSignals" class="form-control" />
                    <span asp-validation-for="Configuration.MaximumSignals" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
            <a asp-page="./Index"><button class="btn btn-secondary">Back</button></a>
        </div>
    </div>
</div>