@page
@model Amphora.Api.Areas.Amphorae.Pages.TermsOfUse.DetailModel

@{
    ViewData["Title"] = $"T&C: {Model.TermsOfUse.Name}";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-8">
            @if(Model.AlreadyAccepted)
            {
                <div class="alert alert-success" role="alert">
                    Terms have been accepted.
                </div>
            }

            <div class="m-3 card">
                <div class="card-header">
                    <div>
                        @Model.TermsOfUse.Name <small class="float-right"> by 
                        <a asp-area="Organisations" asp-page="/Detail" asp-route-id="@Model.TermsOfUse.OrganisationId">@Model.TermsOfUse.Organisation?.Name</a>
                        </small>
                    </div>
                    <small>
                        Id: @Model.TermsOfUse.Id
                    </small>
                </div>
                <div class="card-body">
                    <span style="white-space: pre-line">@Model.TermsOfUse.Contents</span>
                </div>
            </div>
            @if(Model.CanAccept)
            {
            <form method="post" asp-route-returnUrl="@Model.ReturnUrl" 
                                asp-route-id="@Model.TermsOfUse.Id" >
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <button class="btn btn-success btn-block">Accept</button>
            </form>
            }
            <a asp-area="Organisations" asp-page="/TermsOfUse/Index">
                <button class="mt-1 btn btn-secondary btn-block">View All</button>
            </a>
        </div>
    </div>
</div>
