@page
@model Amphora.Api.Areas.Amphorae.Pages.Files.DeletePageModel
@{
    ViewData["Title"] = "Delete File";
}

<div class="container">
    <div class="row">
        <div class="col">
            <h1>Delete File</h1>
            <hr/>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <h3>Are you sure you want to delete the file @Model.Name from Amphora @Model.Amphora.Name ? </h3>

            <form method="post" asp-route-id="@Model.Amphora.Id" asp-route-name=@Model.Name>
                <div class="form-group">
                    <input type="submit" value="Delete" class="btn btn-danger" />
                </div>
            </form>
        </div>
        <div class="col-md-6">
            <img class="img-fluid" src="~/images/stock/warning/undraw_notify_88a4.svg"/>
        </div>
    </div>
</div>
