@model FooterModel

<footer class="border-top footer text-muted">
    <div class="container">
        &copy; @DateTime.Now.Year.ToString() - Amphora Data - 
        @if(Model.EnableValues){
            <a asp-page="/Home/Values" >Our Values </a>
        }
        <span class="float-right text-muted">
            @{
                
                var identifier = $"{Model.Version} {Model.Stack} {Model.Location} {Model.GitHash?.Substring(0, 7)}";
            }
            @if(Model.EnableChangelog)
            {
                <a asp-page="/Changelog/Index"> @identifier </a>
            }
            else
            {
                @identifier
            }
        </span>
    </div>
</footer>